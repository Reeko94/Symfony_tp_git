{% extends 'base.html.twig' %}

{% block title %}Hello SecuredController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    {% if error %}
    <h1 style="color: red">Vous n'êtes pas connecté</h1>
    {% endif %}
    <ul>
        <li>Your controller at <code><a href="{{ '/var/www/src/Controller/SecuredController.php'|file_link(0) }}">src/Controller/SecuredController.php</a></code></li>
        <li>Your template at <code><a href="{{ '/var/www/templates/secured/index.html.twig'|file_link(0) }}">templates/secured/index.html.twig</a></code></li>
    </ul>
</div>
{% endblock %}
